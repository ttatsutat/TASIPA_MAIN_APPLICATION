<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sorting"
                android:paddingStart="10dp"
                android:fontFamily="@font/brandon_grotesque_black"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/sort_rate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/brandon_grotesque_light"
                android:gravity="center_vertical"
                android:onClick="rat_sorting"
                android:paddingStart="10dp"
                android:text="Sort by Rating "
                android:textSize="25dp" />
            <TextView
                android:id="@+id/sort_dist"
                android:onClick="dis_sorting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Sort by Distance "
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:paddingStart="10dp"
                android:fontFamily="@font/brandon_grotesque_light"
                android:textSize="25dp"/>
        </LinearLayout>


</androidx.cardview.widget.CardView>